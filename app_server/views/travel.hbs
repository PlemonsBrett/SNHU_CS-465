<div class="box">
    <div>
        <div class="body">
            <h1>Travel</h1>
            {{#if message}}
            <div class="alert alert-warning">
                <p>{{message}}</p>
            </div>
            {{/if}}
            <ul id="sites">
                {{#each trips}}
                <li>
                    <!-- Update href to point to API endpoint for testing -->
                    <a href="/api/trips/{{this.code}}">
                        <img src="/images/{{this.image}}" alt="{{this.name}}">
                    </a>
                    <h2><a href="/api/trips/{{this.code}}">{{this.name}}</a></h2>
                    <p>{{this.description}}</p>
                    {{#if this.details}}
                    <p>{{this.details}}</p>
                    {{/if}}
                    <p><strong>Length:</strong> {{this.length}}</p>
                    <p><strong>Resort:</strong> {{this.resort}}</p>
                    <p><strong>Rate:</strong> ${{this.perPerson}} / Person</p>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>