{
  "name": "server",
  "version": "1.0.0",
  "description": "Modern TypeScript + Express application with Handlebars",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "rimraf dist && tsx --no-warnings --tsconfig tsconfig.json --outDir dist src/index.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": ["typescript", "express", "handlebars"],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.10.0",
  "dependencies": {
    "@snhu/tsconfig": "workspace:*",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-handlebars": "^7.1.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@snhu/biome-config": "workspace:*",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "rimraf": "^5.0.5",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
