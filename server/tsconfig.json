{
  "extends": "@snhu/tsconfig/node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@config": ["./config/index.ts"],
      "@config/*": ["./config/*"],
      "@middleware": ["./middleware/index.ts"],
      "@middleware/*": ["./middleware/*"],
      "@routes": ["./routes/index.ts"],
      "@routes/*": ["./routes/*"],
      "@utils": ["./utils/index.ts"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "dist"]
}
