{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["./base.json"],
  "files": {
    "ignore": ["**/*.css", "**/node_modules/**", "**/dist/**", "**/.swc/**", "**/*.d.ts"]
  },
  "linter": {
    "rules": {
      "a11y": {
        "recommended": true,
        "useAltText": "error",
        "useAriaPropsForRole": "error",
        "useButtonType": "error",
        "useKeyWithClickEvents": "error",
        "useValidAnchor": "error"
      }
    }
  }
}
